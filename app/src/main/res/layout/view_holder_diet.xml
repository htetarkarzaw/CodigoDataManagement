<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/colorPrimary"
    android:padding="8dp">

    <CheckBox
        android:id="@+id/cbDiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorNavyBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sleep" />

    <View
        android:id="@+id/clickCheckBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/cbDiet"
        app:layout_constraintEnd_toEndOf="@id/cbDiet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cbDiet" />

    <ImageView
        android:id="@+id/ivTip"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_announcement_24"
        app:layout_constraintStart_toEndOf="@id/cbDiet"
        app:layout_constraintTop_toTopOf="@id/cbDiet"
        app:tint="@color/colorSecondary" />

</androidx.constraintlayout.widget.ConstraintLayout>

